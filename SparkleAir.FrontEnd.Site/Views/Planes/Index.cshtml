@model IEnumerable<SparkleAir.Infa.ViewModel.Airtype_Owns.PlaneVmIndex>

@{
    ViewBag.Title = "Index";
}

<h2>飛機款式</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th class="text-bg-dark">
            @Html.DisplayNameFor(model => model.FlightModel)
        </th>
        <th class="text-bg-danger">
            @Html.DisplayNameFor(model => model.ManufactureCompany)
        </th>
        <th class="text-bg-danger"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlightModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufactureCompany)
            </td>
            <td>
                @Html.ActionLink("Update", "Update", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
