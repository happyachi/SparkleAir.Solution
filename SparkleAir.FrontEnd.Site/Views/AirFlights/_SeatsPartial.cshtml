@{
	ViewBag.Title = "_SeatsPartial";
}

<h2>_SeatsPartial</h2>
<h3>航班資訊</h3>
<p>
	出發機場:@Model.DepartureAirport <br />
	到達機場: @Model.ArrivalAirport <br />
	預定出發時間: @Model.ScheduledDeparture <br />
	預定到達時間: @Model.ScheduledArrival <br />
</p>

<h3>座位表</h3>
<table class="table">
	<tr>
		<th>
			艙等
		</th>
		<th>
			座位號碼
		</th>
		<th>
			是否已訂位
		</th>
		<th></th>
	</tr>

	@foreach (var seat in Model.Seats)
	{
		<tr>
			<td>
				@seat.CabinName
			</td>
			<td>
				@seat.SeatNum
			</td>
			<td>
				@seat.IsSeated
			</td>
			<td>
				@Html.ActionLink("訂位資訊", "Details", new { id = seat.Id })
			</td>
		</tr>
	}
</table>
