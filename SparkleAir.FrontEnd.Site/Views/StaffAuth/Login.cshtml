@model SparkleAir.Infa.ViewModel.CompanyAndPermission.CompanyStaffLoginVm

@{
    ViewBag.Title = "Login"; Layout = null;
}
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <!-- Primary Meta Tags -->
    <title>登入</title>
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="title"
          content="Sign in page" />

    <!-- Volt CSS -->
    <link type="text/css" href='@Url.Content("~/Content/volt.css")' rel="stylesheet" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <main>
            <!-- Section -->
            <section class="vh-lg-100 mt-5 mt-lg-0 bg-soft d-flex align-items-center">
                <div class="container">
                    <div class="row justify-content-center form-bg-image"
                         data-background-lg='@Url.Content("~/Files/LayoutImages/signin.svg")'>
                        <div class="col-12 d-flex align-items-center justify-content-center">
                            <div class="bg-white shadow border-0 rounded border-light p-4 p-lg-5 w-100 fmxw-500">
                                <div class="text-center text-md-center mb-4 mt-md-0">
                                    <h1 class="mb-0 h3">登入 Sparkle Airline</h1>
                                </div>
                                
                                <form action="#" class="mt-4">
                                    <!-- Form -->
                                    <div class="form-group mb-4">
                                        <label for="account">帳號</label>
                                        <div class="input-group">
                                            <span class="input-group-text" id="basic-addon1">
                                                <i class="fa-solid fa-user"></i>
                                            </span>
                                            <input type="text"
                                                   class="form-control"
                                                   placeholder="帳號"
                                                   id="account"
                                                   name="Account"
                                                   autofocus
                                                   required />
                                            @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <!-- End of Form -->
                                    <div class="form-group">
                                        <!-- Form -->
                                        <div class="form-group mb-4">
                                            <label for="password">密碼</label>
                                            <div class="input-group">
                                                <span class="input-group-text" id="basic-addon2">
                                                    <i class="fa-solid fa-lock"></i>
                                                </span>
                                                <input type="password"
                                                       placeholder="密碼"
                                                       class="form-control"
                                                       id="password"
                                                       name="Password"
                                                       required />
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <h3>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</h3>
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-gray-800">
                                            登入
                                        </button>
                                    </div>
                                    <div class="dropdown mt-3">
                                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                            預設帳號
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                            <li><a class="dropdown-item default-user" data-account="s202402013">總經理</a></li>
                                            <li><a class="dropdown-item default-user" data-account="s202402001">行銷部-經理</a></li>
                                            <li><a class="dropdown-item default-user" data-account="s202402003">客服部-經理</a></li>
                                            <li><a class="dropdown-item default-user" data-account="s202402004">人資部-經理</a></li>
                                            <li><a class="dropdown-item default-user" data-account="s202402005">業務部-經理</a></li>
                                            <li><a class="dropdown-item default-user" data-account="s202402007">行銷部-專員</a></li>
                                            <li><a class="dropdown-item default-user" data-account="s202402009">客服部-專員</a></li>
                                            <li><a class="dropdown-item default-user" data-account="s202402010">人資部-專員</a></li>
                                            <li><a class="dropdown-item default-user" data-account="s202402011">業務部-專員</a></li>
                                        </ul>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    }



    <!-- Core -->
    <script src='@Url.Content("~/Scripts/popper.min.js")'></script>
    <script src='@Url.Content("~/Scripts/bootstrap.bundle.js")'></script>

    <!-- Sweet Alerts 2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Volt JS -->
    <script src='@Url.Content("~/Scripts/volt.js")'></script>
    <script>
        const account = document.querySelector("#account");
        const password = document.querySelector("#password");

        const defaultUser = document.querySelectorAll(".default-user");
        defaultUser.forEach(element => {
            element.addEventListener("click", (event) => {
                account.value = event.target.dataset.account;
                password.value = event.target.dataset.account;
            });
        });

    </script>

</body>
</html>