@model IEnumerable<SparkleAir.FrontEnd.Site.Models.ViewModels.Campaigns.CampaignsDiscountIndexVm>

@{
    ViewBag.Title = "Index";
}

<style>
    #divMore {
        width: auto;
        height: auto;
        border: 1px solid gray;
        position: absolute;
        background-color: white;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
