@section Scripts{
    <script>
    $(document).ready(function () {
        $("#createOrderBtn").click(function () {
            $.ajax({
                url: '@Url.Action("Create", "TFOrderlist")',
                type: 'POST',
                data: {
                    MemberId: Math.floor(Math.random() * 29) + 1,
                    TFItemsId: Math.floor(Math.random() * 6) + 1
                },
                success: function (data) {
                    // 在這裡更新 View 以顯示新的訂單內容
                    alert('訂單已創建！');
                    // 可以透過 AJAX 載入相應的訂單 View，或是直接更新當前頁面的內容
                },
                error: function () {
                    alert('發生錯誤！');
                }
            });
        });
    });

    function showAjaxContent(itemId) {
    fetch('@Url.Content("~/TFWishlist/Index1")')
    .then(response => response.text())
    .then(data => {
        const main = document.querySelector('main');
        main.innerHTML = data;

        /* 如果要用搜尋套件，要加下面這個 */
        $(document).ready(function () {
            $('.table_jq').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/zh-HANT.json',
                },
            });
        });

        /*刪除前確認事件*/
        const btnDelete = document.querySelectorAll('.btn-delete');
        btnDelete.forEach((item) => {
            item.addEventListener('click', function () {
                Swal.fire({
                    title: "你確定要刪除嗎？",
                    showConfirmButton: false,
                    showDenyButton: true,
                    showCancelButton: true,
                    denyButtonText: `確定刪除`,
                    cancelButtonText: `取消`
                }).then((result) => {
                    if (result.isDenied) {
                        <a href="~/Views/TFItem/Index.cshtml">~/Views/TFItem/Index.cshtml</a>
                        window.location.href = this.dataset.href;
                    }
                });
            });
        });
    })
    .catch(error => console.error('Error:', error));
}

showAjaxContent();
    </script>
    
